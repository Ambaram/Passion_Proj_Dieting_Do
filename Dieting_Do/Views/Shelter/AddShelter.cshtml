@{
    Layout = "_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dieting.Do: Add Shelter Details</title>
</head>
<body>
    <h2 class="text-center"> Add Shelter Details </h2>
    <form method="post" action="~/Views/Standard_Data/StandardList.cshtml">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="Name"> Name</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="form-group col-md-4">
                <label for="owner"> Owner</label>
                <input type="text" class="form-control" name="owner" id="owner">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" />
            </div>
            <div class="form-group col-md-4">
                <label for="fat"> Phone</label>
                <input class="form-control" id="phone" name="phone" type="tel" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</body>
</html>
