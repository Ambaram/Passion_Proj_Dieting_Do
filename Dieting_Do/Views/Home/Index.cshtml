@{
    ViewBag.Title = "Dieting_Do";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner mt-0 container-fluid mx-0" style="background-color:black;">
        <div class="carousel-item active">
            <img class="d-block w-75  mx-auto" height="300" src="~/Images/HERBIVOROUS-CARNIVOROUS-OMNIVOROUS.jpg" alt="Our Animals">
            <div class="carousel-caption d-block text-dark float-left">
                <h5 class="float-left" style="color:black; font-size:2.5em; font-family:Rockwell">Know your pet</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 mx-auto" height="300" src="~/Images/vet-drive.jpg" alt="Vet Drives">
            <div class="carousel-caption d-block text-dark">
                <h5 class="float-left" style="color:black; font-family:Rockwell;font-size:2.5em">PetVet is live now</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 mx-auto" height="300" src="~/Images/fam-jam.jpg" alt="Events">
            <div class="carousel-caption text-left">
                <h5 style="color:black; font-family:Rockwell;font-size:2.5em">FamJam</h5>
                <p class="h5" style="color:black; font-family:Rockwell">Fun thing for you and your pet</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container-fluid text-center mt-4 mb-4">
    <p class="h2 m-2 p-4">We are here for you!!</p>
    <div class="row text-center m-4 p-3">
        <div id="work-1" class="card col-md-3 mx-auto">
            <img id="health" src="~/Images/animal welfare.png" class="card-img-top rounded-circle mx-auto p-4" height="150" style="border:2px solid orange" alt="Animal health image">
            <div class="card-body">
                <h5 class="h5 card-title">Animal Health</h5>
                <p class="card-text">By our comprehensive analysis we provide what you feed your pet to keep them healthy.</p>
                <a href="#" class="btn btn-secondary">View Demo</a>
            </div>
        </div>
        <div id="work-2" class="card col-md-3 mx-auto">
            <img id="shelter" src="~/Images/home.jpg" class="card-img-top rounded-circle mx-auto p-4" height="150" alt="Animal Safety image">
            <div class="card-body">
                <h5 class="h5 card-title">Animal Safety</h5>
                <p class="card-text">Dieting.Do has a sound network of animals shelters and foster homes.</p>
                <a href="#" class="btn btn-secondary">View Here</a>
            </div>
        </div>
        <div id="work-3" class=" card col-md-3 mx-auto">
            <img id="welfare" src="~/Images/welfare.png" class="card-img-top rounded-circle mx-auto p-4" height="150" alt="Animal Welfare image">
            <div class="card-body">
                <h5 class="h5 card-title">Animal Welfare</h5>
                <p class="card-text">
                    Dieting.Do in collaboration with animal welfare societies across the globe is conducting events
                    to harvest animal welare values.
                </p>
                <a href="#" class="btn btn-secondary">View Events</a>
            </div>
        </div>
    </div>
</div>
    <ul class="list-unstyled">
        <li class="media bg-success pl-0">
            <img class="col-md-6 p-0 m-0" height="200" src="~/Images/feed-animals.jpg" alt="animal food">
            <div class="media-body text-center text-light my-5">
                <p>See what is best for your pet</p>
                <a class="btn btn-light text-success font-weight-bold">Suggested Foods >></a>
            </div>
        </li>
        <li class="media bg-white m-0 pl-0">
            <div class="media-body text-center text-secondary my-5">
                <p> Consult to an expert for any concerns and problem</p>
                <a class="btn btn-success font-weight-bold text-light">Visit Us >></a>
            </div>
            <img class="col-md-6 m-0 p-0" height="200" src="~/Images/vet-drive.jpg" alt="vet drive">
        </li>
        <li class="media bg-success m-0 pl-0">
            <img class="col-md-6 p-0 m-0" height="200" src="~/Images/help.jpg" alt="help">
            <div class="media-body text-center text-light my-5">
                <p> Help us in keeping the animals around the globe feel loved</p>
                <a class="btn btn-light text-success font-weight-bold">Help Us >></a>
            </div>
        </li>
    </ul>